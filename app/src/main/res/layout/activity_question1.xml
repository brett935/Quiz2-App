<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.brettnapier.quiz2.Question1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which colors are primary colors?"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:id="@+id/checkBox_red"
        android:layout_marginTop="98dp"
        android:checked="false"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/checkBox_yellow"
        android:layout_alignStart="@+id/checkBox_yellow" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purple"
        android:id="@+id/checkBox_purple"
        android:checked="false"
        android:layout_below="@+id/checkBox_red"
        android:layout_alignLeft="@+id/checkBox_red"
        android:layout_alignStart="@+id/checkBox_red" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yellow"
        android:id="@+id/checkBox_yellow"
        android:layout_below="@+id/checkBox_purple"
        android:layout_centerHorizontal="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:id="@+id/checkBox_blue"
        android:layout_below="@+id/checkBox_yellow"
        android:layout_alignLeft="@+id/checkBox_yellow"
        android:layout_alignStart="@+id/checkBox_yellow"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:id="@+id/checkBox_green"
        android:layout_below="@+id/checkBox_blue"
        android:layout_alignLeft="@+id/checkBox_blue"
        android:layout_alignStart="@+id/checkBox_blue"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orange"
        android:id="@+id/checkBox_orange"
        android:layout_below="@+id/checkBox_green"
        android:layout_alignLeft="@+id/checkBox_green"
        android:layout_alignStart="@+id/checkBox_green"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button_submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
